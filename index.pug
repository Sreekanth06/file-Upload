doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        <!-- CSS only -->
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet")
        <!-- JavaScript Bundle with Popper -->
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
    body 

    nav.navbar.navbar-expand-md.navbar-dark.bg-success
        .container
            a.navbar-brand(href="/") File Upload
            button.navbar-toggler(data-bs-target="#menu",data-bs-toggle="collapse")
                span.navbar-toggler-icon 
            .collapse.navbar-collapse#menu
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href="/home") Home 
                    li.nav-item 
                        a.nav-link(href="/upload") Upload 

    .container
        .row
            .col-md-6.text-center 
                h3.display-3.text-secondary Home 
        .row 
         for x in files 
            .col-md-6.mt-2.mb-2 
                .card 
                    .card-header 
                        h6.text-center.text-secondary=x.originalname 
                    .card-body 
                        ul.list-group 
                            li.list-group-item 
                                strong FiledName 
                                span.float-end=x.fieldname 
                            li.list-group-item 
                                strong Encoding 
                                span.float-end=x.encoding
                            li.list-group-item 
                                strong MimeType  
                                span.float-end=x.mimetype
                            li.list-group-item 
                                strong Destination  
                                span.float-end=x.destination 
                            li.list-group-item 
                                strong FileName 
                                span.float-end=x.filename 
                            li.list-group-item 
                                strong Path  
                                span.float-end=x.path 
                            li.list-group-item 
                                strong Size  
                                span.float-end=x.size 
                    .card-footer 
                        a.btn.btn-danger(href="/delete/" + x.id) Delete 
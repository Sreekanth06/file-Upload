doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        <!-- CSS only -->
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet")
        <!-- JavaScript Bundle with Popper -->
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
    body 

    nav.navbar.navbar-expand-md.navbar-dark.bg-success
        .container
            a.navbar-brand(href="/") File Upload
            button.navbar-toggler(data-bs-target="#menu",data-bs-toggle="collapse")
                span.navbar-toggler-icon 
            .collapse.navbar-collapse#menu
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href="/home") Home 
                    li.nav-item 
                        a.nav-link(href="/upload") Upload 

    .container
        .row
            .col-md-12.text-center 
                h3.display-3.text-secondary Upload
        .row 
            .col-md-6.offset-md-3 
                .card 
                    .card-body 
                        form(action="/upload",method="post",enctype="multipart/form-data")
                            .form-group.mt-2.mb-2 
                                label(for="myFile") Choose File to upload 
                                input.form-control(type="file",name="myFile",id="myFile",required)
                            .form-group.mt-2.mb-2 
                                input.btn.btn-success(type="submit",value="update")
